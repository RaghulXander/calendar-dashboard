{
	"compilerOptions": {
		"target": "es5",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["./components/*"], // Map @app/* to the src/app/* directory
			"@styles/*": ["./sass-helpers/*"] // Map @styles/* to the src/styles/* directory
			// Add more paths as needed
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
